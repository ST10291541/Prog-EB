<Window x:Class="CustomDictionary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomDictionary"
        mc:Ignorable="d"
        Title="Smart Home Management" Height="350" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Device ID:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtDeviceID" Width="150" Margin="0,0,0,10"/>
                <TextBlock Text="Status:"/>
                <ComboBox x:Name="cmbStatus" Width="150" Margin="0,0,0,10">
                    <ComboBoxItem Content="Online"/>
                    <ComboBoxItem Content="Offline"/>
                    <ComboBoxItem Content="Unknown"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Margin="10,0,0,0">
                <Button Content="Add Device" Click="AddDevice_Click" Margin="0,0,0,5"/>
                <Button Content="Update Status" Click="UpdateStatus_Click" Margin="0,0,0,5"/>
                <Button Content="Remove Device" Click="RemoveDevice_Click"/>
            </StackPanel>
        </StackPanel>

        <ListBox x:Name="lstDevices" Grid.Row="1" />
    </Grid>
</Window>